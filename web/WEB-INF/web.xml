<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.econf.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserView</servlet-name>
        <servlet-class>com.econf.view.UserView</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>page2Servlet</servlet-name>
        <servlet-class>com.econf.view.page2Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FirstServlet1</servlet-name>
        <servlet-class>com.econf.controller.FirstServlet1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servlet2</servlet-name>
        <servlet-class>com.econf.view.servlet2</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>application</servlet-name>
        <servlet-class>com.econf.view.application</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>comment_kpp</servlet-name>
        <servlet-class>com.econf.view.comment_kpp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ApplyServlet</servlet-name>
        <servlet-class>com.econf.controller.ApplyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login_page.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserView</servlet-name>
        <url-pattern>/user_view.view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>page2Servlet</servlet-name>
        <url-pattern>/page2.view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FirstServlet1</servlet-name>
        <url-pattern>/FirstServlet1.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlet2</servlet-name>
        <url-pattern>/servlet2.view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>application</servlet-name>
        <url-pattern>/application.view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>comment_kpp</servlet-name>
        <url-pattern>/comment_kpp.view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ApplyServlet</servlet-name>
        <url-pattern>/ApplyServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
